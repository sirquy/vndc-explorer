extends layout

block content
  .row
    .col-md-12
      h1 #{config.tokenName}
  
  .row
    .col-md-10
      h3 Recent transactions
    .col-md-1
      if offset - stepSize >= 0
        a.btn.btn-default(href="/" + (offset - stepSize)) Previous
    .col-md-1
        a.btn.btn-default(href="/" + (offset + stepSize)) Next
  .row
    .col-md-12
      .table-responsive
        table.table
          tr
            th Type
            th From
            th To
            th Amount
            th Date
          for event in events
            +event_row(event)
